<h1 class="title is-1">Tiny Insurer App</h1>
<h2 class="title is-2">Nova apólice</h2>
<div>
  <%= form_with url: policies_path do |form| %>
    <div>
      <%= form.label :insured_name, 'Nome do segurado', class: 'label' %>
      <%= form.text_field :insured_name, required: true, class: 'input' %>
    </div>

    <div>
      <%= form.label :insured_cpf, 'CPF do segurado' %>
      <%= form.text_field :insured_cpf, required: true, class: 'input' %>
    </div>
 
    <div>
      <%= form.label :insured_at, 'Segurado em:', class: 'label' %>
      <%= form.date_field :insured_at,required: true, class: 'input' %>
    </div>

    <div>
      <%= form.label :insured_until, 'Segurado até:', class: 'label' %>
      <%= form.date_field :insured_until,required: true, class: 'input' %>
    </div>

    <div>
      <%= form.label :vehicle_plate, 'Placa do veículo', class: 'label' %>
      <%= form.text_field :vehicle_plate, required: true, class: 'input' %>
    </div>

    <div>
      <%= form.label :vehicle_brand, 'Marca do veículo', class: 'label' %>
      <%= form.text_field :vehicle_brand, required: true, class: 'input' %>
    </div>

    <div>
      <%= form.label :vehicle_model, 'Modelo do veículo', class: 'label' %>
      <%= form.text_field :vehicle_model, required: true, class: 'input' %>
    </div>

    <div>
      <%= form.label :vehicle_year, 'Ano do veículo', class: 'label' %>
      <%= form.number_field :vehicle_year, required: true, class: 'input' %>
    </div>

    <div>
      <br />
      <%= form.submit 'Criar apólice', class: 'button is-link' %>
    </div>
  <% end %>
</div>
